<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.laowai.powerpics4.Main4Activity"
    tools:showIn="@layout/activity_main4"
    android:orientation="vertical"
    android:weightSum="1">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:id="@+id/web_view_4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:onClick="but_click_act_4"
            android:text="Request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_req"
            android:layout_weight="1" />

        <Button
            android:onClick="but_click_act_4"
            android:text="Load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_load"
            android:layout_weight="1" />

        <Button
            android:text="Save"
            android:onClick="but_click_act_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_save_act_4"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="tv_from_web"
        android:layout_width="match_parent"
        android:id="@+id/tv_from_web"
        android:layout_weight="0.84"
        android:layout_height="300dp" />
</LinearLayout>
