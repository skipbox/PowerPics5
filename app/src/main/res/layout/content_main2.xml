<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.laowai.powerpics4.Main2Activity"
    tools:showIn="@layout/activity_main2"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="buttonOnClick_2"
            android:text="English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_set_english"
            android:layout_weight="1" />

        <Button
            android:onClick="buttonOnClick_2"
            android:text="Chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_set_chinese"
            android:layout_weight="1" />

        <Button
            android:onClick="buttonOnClick_2"
            android:text="Japanese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_set_jap"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_language"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="1" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:onClick="buttonOnClick_2"
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_check_box"
            android:layout_weight="1" />

        <CheckBox
                        android:onClick="buttonOnClick_2"
            android:text="font/big/sm"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/my_check_box_2" />
                <CheckBox
                                android:onClick="buttonOnClick_2"
            android:text="check 3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/my_check_box_3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <Button
            android:text="+1"
            android:id="@+id/b_add_1"
            android:onClick="add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="+10"
            android:id="@+id/b_add_10"
            android:onClick="add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="+60"
            android:id="@+id/b_add_60"
            android:onClick="add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="+3600"
            android:id="@+id/b_add_3600"
            android:onClick="add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <Button
            android:text="clear(3)"
            android:onClick="add_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_clear"
            android:layout_weight="1" />

        <TextView
            android:text="36000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hh_mm_ss"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
